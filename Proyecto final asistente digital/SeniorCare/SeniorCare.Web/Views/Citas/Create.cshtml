@model SeniorCare.Domain.Entities.Cita
@{
    ViewData["Title"] = "Nueva Cita";
}
<h2>Nueva Cita</h2>
<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6 col-lg-5">
            <div class="mb-3">
                <label class="form-label">Paciente</label>
                <select asp-for="PacienteId" asp-items="ViewBag.Pacientes" class="form-select form-select-lg"></select>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha</label>
                <input asp-for="Fecha" type="date" class="form-control form-control-lg" />
            </div>
            <div class="mb-3">
                <label class="form-label">Hora</label>
                <input asp-for="Hora" type="time" class="form-control form-control-lg" />
            </div>
            <div class="mb-3">
                <label class="form-label">Propósito</label>
                <input asp-for="Proposito" class="form-control form-control-lg" />
            </div>
            <button class="btn btn-success btn-lg" type="submit">Guardar</button>
            <a class="btn btn-secondary btn-lg" asp-action="Index">Volver</a>
        </div>
    </div>
</form>
