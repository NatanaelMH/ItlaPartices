@model IEnumerable<SeniorCare.Domain.Entities.Cita>
@{
    ViewData["Title"] = "Citas";
    var q = ViewData["q"] as string;
    var desde = ViewData["desde"] as string;
    var hasta = ViewData["hasta"] as string;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Citas</h2>
    <a class="btn btn-success btn-lg" asp-action="Create">+ Nueva cita</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-6">
        <input name="q" value="@q" class="form-control form-control-lg" placeholder="Buscar por paciente, cédula o propósito..." />
    </div>
    <div class="col-md-2">
        <input type="date" name="desde" value="@desde" class="form-control form-control-lg" />
    </div>
    <div class="col-md-2">
        <input type="date" name="hasta" value="@hasta" class="form-control form-control-lg" />
    </div>
    <div class="col-md-2 d-grid">
        <button class="btn btn-outline-secondary btn-lg" type="submit">Filtrar</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Paciente</th>
            <th>Propósito</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Fecha.ToString("yyyy-MM-dd")</td>
                <td>@c.Hora</td>
                <td>@c.Paciente?.Nombre</td>
                <td>@c.Proposito</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@c.Id">Ver</a>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@c.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Cancelar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
