@model IEnumerable<SeniorCare.Domain.Entities.Paciente>
@{
    ViewData["Title"] = "Pacientes";
    var q = ViewData["q"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Pacientes</h2>
    <a class="btn btn-primary btn-lg" asp-action="Create">+ Nuevo</a>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input name="q" value="@q" class="form-control form-control-lg" placeholder="Buscar por nombre, teléfono, correo o cédula..." />
        <button class="btn btn-outline-secondary btn-lg" type="submit">Buscar</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Cédula</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Telefono</td>
                <td>@p.Correo</td>
                <td>@p.Cedula</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@p.Id">Ver</a>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@p.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

