@model TuSaludMental.Web.Models.Article
@{
    ViewData["Title"] = Model.Titulo;
}
<div class="row mt-2">
    <div class="col-lg-9">
        <h2>@Model.Titulo</h2>
        @if (!string.IsNullOrWhiteSpace(Model.Resumen))
        {
            <p class="lead text-muted">@Model.Resumen</p>
        }
        <article class="mt-3">
            <pre class="p-3 bg-light border rounded" style="white-space:pre-wrap;">@Model.Contenido</pre>
        </article>
    </div>
    <div class="col-lg-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="small text-muted">Publicado</div>
                <div>@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</div>
                @if (!string.IsNullOrWhiteSpace(Model.Tags))
                {
                    <div class="mt-3 small text-muted">Tags</div>
                    <div>@Model.Tags</div>
                }
                <div class="mt-3 d-grid gap-2">
                    <a class="btn btn-outline-secondary" asp-action="Editar" asp-route-id="@Model.Id">Editar</a>
                    <a class="btn btn-outline-primary" asp-action="Index">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
