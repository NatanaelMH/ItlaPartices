@model TuSaludMental.Web.Models.Article
@{
    ViewData["Title"] = "Nuevo artículo";
}
<h2 class="mt-2">Nuevo artículo</h2>

<form asp-action="Crear" method="post" class="row g-3">
    <div class="col-12">
        <label class="form-label">Título</label>
        <input asp-for="Titulo" class="form-control" required />
    </div>
    <div class="col-12">
        <label class="form-label">Resumen</label>
        <textarea asp-for="Resumen" class="form-control" rows="2"></textarea>
    </div>
    <div class="col-12">
        <label class="form-label">Contenido</label>
        <textarea asp-for="Contenido" class="form-control" rows="8" required></textarea>
    </div>
    <div class="col-md-6">
        <label class="form-label">Tags (coma separada)</label>
        <input asp-for="Tags" class="form-control" placeholder="ansiedad, sueño, hábitos" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Guardar</button>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </div>
</form>

